citHeader("To cite Torgegrams in publications use:")

citEntry(entry="article",
	title = "The Torgegram for Fluvial Variography: Characterizing Spatial Dependence on Stream Networks",
	author = personList( person(c("Dale", "L."), "Zimmerman"),person(c("Jay", "M."), "Ver Hoef")), 
	journal = "Journal of Computational and Graphical Statistics",
	year = 2016, 
	volume = 000,
	pages = "000-000",
	textVersion = "Zimmerman, D. L. and Ver Hoef, J. M. (2016) The Torgegram for Fluvial Variography: Characterizing Spatial Dependence on Stream Networks. Journal of Computational and Graphical Statistics 000:00-00. DOI: XXXX"
)

citEntry(entry = "Article",
  title        = "{SSN}: An {R} Package for Spatial Statistical Modeling on Stream Networks",
  author = personList(person(c("Jay", "M."), "Ver Hoef"),
     person(c("Erin", "E."), "Peterson"),
     person(c("David"), "Clifford"),
     person(c("Rohan"), "Shah")),
  journal      = "Journal of Statistical Software",
  year         = "2014",
  volume       = "56",
  number       = "3",
  pages        = "1--45",
  url          = "http://www.jstatsoft.org/v56/i03/",

  textVersion  =
  paste("Ver Hoef, Jay M., Peterson, Erin E., Clifford, David, and Shah, Rohan. (2014).",
        "SSN: An R Package for Spatial Statistical Modeling on Stream Networks.",
        "Journal of Statistical Software, 56(3), 1-43.",
        "URL http://www.jstatsoft.org/v56/i03/.")
)	
